<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartaPatrocinadores"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/elevation_toolbar"
    card_view:cardCornerRadius="@dimen/elevation_toolbar"
    android:layout_margin="@dimen/elevation_toolbar">

    <LinearLayout
        android:id="@+id/linearLayoutCarta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/elevation_toolbar"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewMarca"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="@dimen/act2_text_form"/>

        <TextView
            android:id="@+id/textViewDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewEnlace"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:autoLink="web">
        </TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>